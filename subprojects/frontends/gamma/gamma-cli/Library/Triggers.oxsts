package semantifyr::gamma::triggers

import semantifyr::gamma::events

class Trigger {
    tran isTriggered() { }
}

class EventTrigger : Trigger {
    refers event : Event[1]

    redefine tran isTriggered() {
        inline event.isSet()
    }
}

class TimeoutTrigger : Trigger {
    refers timeout : Timeout[1]

    redefine tran isTriggered() {
        inline timeout.isUp()
    }
}

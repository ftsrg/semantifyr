package semantifyr::gamma::events

class Event {
    var isActive := false

    tran set() {
        isActive := true
    }

    tran reset() {
        isActive := false
    }

    redefine havoc {
        havoc (isActive)
    }

    tran isSet() {
        assume (isActive)
    }
}

class Timeout {
    refers deltaTime: int = 1

    var remainingTime: int := 0
 
    redefine tran {
        if (remainingTime > 0) {
            remainingTime := remainingTime - deltaTime
        }
    }

    tran isUp() {
        assume (remainingTime <= 0)
    }
}

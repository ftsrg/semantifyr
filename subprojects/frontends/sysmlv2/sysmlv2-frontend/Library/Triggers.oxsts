package Triggers

import Items
import Ports

type Trigger {
    virtual tran isTriggered { }
}

type ItemTrigger : Trigger {
    reference port : Port[1..1]
    reference item : Item[1..1] // port.inputItems[1..1]

    override tran isTriggered {
        assume (port.incomingItem == item)
    }
}
